&lt;UserControl x:Class="KDP_CATEGORY_RANKERApp.Views.FirstRunSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    &lt;Grid Margin="20">
        &lt;Grid.RowDefinitions>
            &lt;RowDefinition Height="Auto"/>
            &lt;RowDefinition Height="*"/>
            &lt;RowDefinition Height="Auto"/>
        &lt;/Grid.RowDefinitions>

        &lt;!-- Header -->
        &lt;StackPanel Grid.Row="0" Margin="0,0,0,30">
            &lt;TextBlock Text="🚀 Welcome to KDP Category Ranker!" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="{DynamicResource MahApps.Brushes.Accent}"
                       HorizontalAlignment="Center"/>
            &lt;TextBlock Text="Let's get you set up to find the best categories for your books"
                       FontSize="16" Margin="0,10,0,0"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource MahApps.Brushes.Text}"/>
        &lt;/StackPanel>

        &lt;!-- Setup Steps -->
        &lt;ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            &lt;StackPanel>
                
                &lt;!-- Step 1: Market Selection -->
                &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                        BorderBrush="{DynamicResource MahApps.Brushes.Accent}" 
                        BorderThickness="1" CornerRadius="8" Margin="0,0,0,20" Padding="20">
                    &lt;StackPanel>
                        &lt;TextBlock Text="📍 Step 1: Choose Your Primary Market" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        &lt;TextBlock Text="Which Amazon marketplace do you primarily publish on?" Margin="0,0,0,10"/>
                        &lt;ComboBox ItemsSource="{Binding AvailableMarkets}" 
                                  SelectedItem="{Binding SelectedMarket}" 
                                  FontSize="14" Margin="0,0,0,10"/>
                        &lt;TextBlock Text="💡 Tip: You can always change this later in Settings" 
                                   FontStyle="Italic" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Step 2: Data Mode -->
                &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                        BorderBrush="{DynamicResource MahApps.Brushes.Accent}" 
                        BorderThickness="1" CornerRadius="8" Margin="0,0,0,20" Padding="20">
                    &lt;StackPanel>
                        &lt;TextBlock Text="📊 Step 2: Choose Data Mode" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        &lt;RadioButton Content="Demo Mode (Recommended for first-time users)" 
                                     IsChecked="{Binding UseDemoMode}" 
                                     FontSize="14" Margin="0,0,0,10"/>
                        &lt;TextBlock Text="• Uses bundled sample data (19,000+ categories)" 
                                   Margin="20,0,0,5" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                        &lt;TextBlock Text="• No internet connection required" 
                                   Margin="20,0,0,5" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                        &lt;TextBlock Text="• Perfect for learning all features" 
                                   Margin="20,0,0,15" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                        
                        &lt;RadioButton Content="Live Data Mode (Advanced users)" 
                                     IsChecked="{Binding UseLiveMode}" 
                                     FontSize="14" Margin="0,0,0,10"/>
                        &lt;TextBlock Text="• Fetches real-time data from Amazon" 
                                   Margin="20,0,0,5" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                        &lt;TextBlock Text="• Requires stable internet connection" 
                                   Margin="20,0,0,5" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                        &lt;TextBlock Text="• Respects rate limits and Amazon ToS" 
                                   Margin="20,0,0,5" FontSize="12" 
                                   Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Step 3: Author Profile -->
                &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                        BorderBrush="{DynamicResource MahApps.Brushes.Accent}" 
                        BorderThickness="1" CornerRadius="8" Margin="0,0,0,20" Padding="20">
                    &lt;StackPanel>
                        &lt;TextBlock Text="✍️ Step 3: Author Profile (Optional)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        &lt;TextBlock Text="Help us provide better recommendations by sharing a bit about your publishing goals:" Margin="0,0,0,10"/>
                        
                        &lt;Grid>
                            &lt;Grid.ColumnDefinitions>
                                &lt;ColumnDefinition Width="*"/>
                                &lt;ColumnDefinition Width="*"/>
                            &lt;/Grid.ColumnDefinitions>
                            
                            &lt;StackPanel Grid.Column="0" Margin="0,0,10,0">
                                &lt;TextBlock Text="Author Name:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                &lt;TextBox Text="{Binding AuthorName}" FontSize="14" Margin="0,0,0,10"/>
                                
                                &lt;TextBlock Text="Primary Genre:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                &lt;ComboBox ItemsSource="{Binding PrimaryGenres}" 
                                          SelectedItem="{Binding SelectedGenre}" 
                                          FontSize="14" Margin="0,0,0,10"/>
                            &lt;/StackPanel>
                            
                            &lt;StackPanel Grid.Column="1" Margin="10,0,0,0">
                                &lt;TextBlock Text="Publishing Experience:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                &lt;ComboBox ItemsSource="{Binding ExperienceLevels}" 
                                          SelectedItem="{Binding SelectedExperience}" 
                                          FontSize="14" Margin="0,0,0,10"/>
                                
                                &lt;TextBlock Text="Monthly Sales Goal:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                &lt;ComboBox ItemsSource="{Binding SalesGoals}" 
                                          SelectedItem="{Binding SelectedSalesGoal}" 
                                          FontSize="14" Margin="0,0,0,10"/>
                            &lt;/StackPanel>
                        &lt;/Grid>
                    &lt;/StackPanel>
                &lt;/Border>

                &lt;!-- Step 4: Quick Tips -->
                &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                        BorderBrush="{DynamicResource MahApps.Brushes.Accent}" 
                        BorderThickness="1" CornerRadius="8" Margin="0,0,0,20" Padding="20">
                    &lt;StackPanel>
                        &lt;TextBlock Text="💡 Quick Tips to Get Started" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        &lt;TextBlock Text="• Start with the 🚀 Category Recommender to find the best categories for your book" Margin="0,0,0,8"/>
                        &lt;TextBlock Text="• Use Keywords tab to research profitable search terms" Margin="0,0,0,8"/>
                        &lt;TextBlock Text="• Check Competition tab to analyze successful books in your niche" Margin="0,0,0,8"/>
                        &lt;TextBlock Text="• Categories tab has 19,000+ categories with bestseller requirements" Margin="0,0,0,8"/>
                        &lt;TextBlock Text="• AMS Generator creates Amazon advertising campaigns" Margin="0,0,0,8"/>
                    &lt;/StackPanel>
                &lt;/Border>

            &lt;/StackPanel>
        &lt;/ScrollViewer>

        &lt;!-- Footer Buttons -->
        &lt;StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            &lt;Button Content="📚 Learn More" 
                    Command="{Binding OpenHelpCommand}" 
                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                    Margin="0,0,15,0" Padding="15,8"/>
            &lt;Button Content="🚀 Start Using KDP Category Ranker" 
                    Command="{Binding CompleteSetupCommand}" 
                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                    FontWeight="SemiBold" Padding="20,10"/>
        &lt;/StackPanel>
    &lt;/Grid>
&lt;/UserControl>