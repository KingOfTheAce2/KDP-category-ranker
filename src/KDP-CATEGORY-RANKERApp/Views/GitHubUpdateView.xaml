&lt;UserControl x:Class="KDP_CATEGORY_RANKERApp.Views.GitHubUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    &lt;Grid Margin="20">
        &lt;Grid.RowDefinitions>
            &lt;RowDefinition Height="Auto"/>
            &lt;RowDefinition Height="Auto"/>
            &lt;RowDefinition Height="*"/>
            &lt;RowDefinition Height="Auto"/>
        &lt;/Grid.RowDefinitions>

        &lt;!-- Header -->
        &lt;StackPanel Grid.Row="0" Margin="0,0,0,20">
            &lt;TextBlock Text="🔄 GitHub Updates" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
            &lt;TextBlock Text="Automatic updates directly from GitHub releases"
                       FontSize="14" Margin="0,5,0,0"
                       Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
        &lt;/StackPanel>

        &lt;!-- Version Info -->
        &lt;Border Grid.Row="1" Background="{DynamicResource MahApps.Brushes.Gray10}" 
                CornerRadius="8" Padding="20" Margin="0,0,0,20">
            &lt;Grid>
                &lt;Grid.ColumnDefinitions>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="Auto"/>
                &lt;/Grid.ColumnDefinitions>
                
                &lt;StackPanel Grid.Column="0">
                    &lt;TextBlock Text="📦 Version Information" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                    
                    &lt;Grid>
                        &lt;Grid.ColumnDefinitions>
                            &lt;ColumnDefinition Width="Auto"/>
                            &lt;ColumnDefinition Width="*"/>
                        &lt;/Grid.ColumnDefinitions>
                        &lt;Grid.RowDefinitions>
                            &lt;RowDefinition Height="Auto"/>
                            &lt;RowDefinition Height="Auto"/>
                            &lt;RowDefinition Height="Auto"/>
                        &lt;/Grid.RowDefinitions>
                        
                        &lt;TextBlock Grid.Row="0" Grid.Column="0" Text="Current Version:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        &lt;TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentVersion}" Margin="0,0,0,5"/>
                        
                        &lt;TextBlock Grid.Row="1" Grid.Column="0" Text="Latest Version:" FontWeight="SemiBold" Margin="0,0,10,5"
                                   Visibility="{Binding LatestVersion, Converter={StaticResource StringToVisibilityConverter}}"/>
                        &lt;TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LatestVersion}" Margin="0,0,0,5"
                                   Visibility="{Binding LatestVersion, Converter={StaticResource StringToVisibilityConverter}}"/>
                        
                        &lt;TextBlock Grid.Row="2" Grid.Column="0" Text="Repository:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        &lt;TextBlock Grid.Row="2" Grid.Column="1">
                            &lt;Hyperlink NavigateUri="{Binding RepositoryUrl}" RequestNavigate="Hyperlink_RequestNavigate">
                                &lt;Run Text="{Binding RepositoryUrl}"/>
                            &lt;/Hyperlink>
                        &lt;/TextBlock>
                    &lt;/Grid>
                    
                    &lt;!-- Update Available Badge -->
                    &lt;Border Background="Green" CornerRadius="12" Padding="8,3" Margin="0,10,0,0" HorizontalAlignment="Left"
                            Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        &lt;TextBlock Text="🎉 Update Available!" FontSize="12" FontWeight="SemiBold" 
                                   Foreground="White"/>
                    &lt;/Border>
                &lt;/StackPanel>
                
                &lt;StackPanel Grid.Column="1" VerticalAlignment="Center">
                    &lt;Button Content="🔍 Check for Updates" 
                            Command="{Binding CheckForUpdatesCommand}"
                            Style="{DynamicResource MahApps.Styles.Button.Accent}"
                            IsEnabled="{Binding IsCheckingForUpdates, Converter={StaticResource BooleanInverseConverter}}"
                            Margin="0,0,0,10" Padding="15,8"/>
                    
                    &lt;Button Content="📦 View Releases" 
                            Command="{Binding OpenGitHubReleasesCommand}"
                            Padding="15,8"/>
                &lt;/StackPanel>
            &lt;/Grid>
        &lt;/Border>

        &lt;!-- Update Progress -->
        &lt;Border Grid.Row="2" Background="{DynamicResource MahApps.Brushes.Gray10}" 
                CornerRadius="8" Padding="20" Margin="0,0,0,20"
                Visibility="{Binding IsDownloadingUpdate, Converter={StaticResource BooleanToVisibilityConverter}}">
            &lt;StackPanel>
                &lt;TextBlock Text="📥 Downloading Update..." FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                
                &lt;mah:MetroProgressBar Value="{Binding DownloadProgress}" 
                                      Minimum="0" Maximum="100" 
                                      Height="12" Margin="0,0,0,10"/>
                
                &lt;TextBlock Text="{Binding StatusMessage}" FontSize="12" 
                           HorizontalAlignment="Center" 
                           Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
            &lt;/StackPanel>
        &lt;/Border>

        &lt;!-- Release Information -->
        &lt;Border Grid.Row="2" Background="{DynamicResource MahApps.Brushes.Gray10}" 
                CornerRadius="8" Padding="20" Margin="0,0,0,20"
                Visibility="{Binding LatestRelease, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
            &lt;ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                &lt;StackPanel>
                    &lt;TextBlock Text="📝 Latest Release Notes" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                    
                    &lt;TextBlock Text="{Binding LatestRelease.Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                    
                    &lt;TextBlock Text="{Binding LatestRelease.PublishedAt, StringFormat='Released on {0:MMMM dd, yyyy}'}" 
                               FontSize="12" Margin="0,0,0,10"
                               Foreground="{DynamicResource MahApps.Brushes.Gray1}"/>
                    
                    &lt;TextBlock Text="{Binding LatestRelease.Body}" TextWrapping="Wrap" FontSize="12"
                               FontFamily="Consolas" 
                               Background="{DynamicResource MahApps.Brushes.Gray9}"
                               Padding="10" Margin="0,0,0,15"/>
                    
                    &lt;StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        &lt;Button Content="Not Now" 
                                Command="{Binding DismissUpdateCommand}"
                                Margin="0,0,10,0" Padding="12,6"/>
                        &lt;Button Content="Remind Later" 
                                Command="{Binding RemindLaterCommand}"
                                Margin="0,0,10,0" Padding="12,6"/>
                        &lt;Button Content="📥 Download & Install" 
                                Command="{Binding DownloadAndInstallUpdateCommand}"
                                Style="{DynamicResource MahApps.Styles.Button.Accent}"
                                Padding="15,8" FontWeight="SemiBold"
                                IsEnabled="{Binding IsDownloadingUpdate, Converter={StaticResource BooleanInverseConverter}}"/>
                    &lt;/StackPanel>
                &lt;/StackPanel>
            &lt;/ScrollViewer>
        &lt;/Border>

        &lt;!-- Status Bar -->
        &lt;Border Grid.Row="3" Background="{DynamicResource MahApps.Brushes.Gray9}" 
                CornerRadius="4" Padding="10,5">
            &lt;Grid>
                &lt;Grid.ColumnDefinitions>
                    &lt;ColumnDefinition Width="*"/>
                    &lt;ColumnDefinition Width="Auto"/>
                &lt;/Grid.ColumnDefinitions>
                
                &lt;TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           FontSize="12" VerticalAlignment="Center"/>
                
                &lt;StackPanel Grid.Column="1" Orientation="Horizontal">
                    &lt;mah:ProgressRing IsActive="{Binding IsCheckingForUpdates}" 
                                      Width="16" Height="16" Margin="5,0"/>
                    &lt;TextBlock Text="Checking..." FontSize="11" 
                               VerticalAlignment="Center" Margin="5,0,0,0"
                               Visibility="{Binding IsCheckingForUpdates, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                &lt;/StackPanel>
            &lt;/Grid>
        &lt;/Border>

    &lt;/Grid>

    &lt;!-- Update Dialog -->
    &lt;UserControl.Resources>
        &lt;Style TargetType="mah:Flyout">
            &lt;Setter Property="Theme" Value="Adapt"/>
            &lt;Setter Property="Position" Value="Right"/>
            &lt;Setter Property="Width" Value="400"/>
        &lt;/Style>
    &lt;/UserControl.Resources>
    
&lt;/UserControl>