&lt;UserControl x:Class="KDP_CATEGORY_RANKERApp.Views.LicenseActivationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    &lt;Grid Margin="20">
        &lt;Grid.RowDefinitions>
            &lt;RowDefinition Height="Auto"/>
            &lt;RowDefinition Height="*"/>
            &lt;RowDefinition Height="Auto"/>
        &lt;/Grid.RowDefinitions>

        &lt;!-- Header -->
        &lt;TextBlock Grid.Row="0" Text="🔐 License Management" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource MahApps.Brushes.Accent}"
                   Margin="0,0,0,20"/>

        &lt;!-- License Status -->
        &lt;ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            &lt;StackPanel>
                
                &lt;!-- Current License Status -->
                &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    &lt;Grid>
                        &lt;Grid.ColumnDefinitions>
                            &lt;ColumnDefinition Width="*"/>
                            &lt;ColumnDefinition Width="Auto"/>
                        &lt;/Grid.ColumnDefinitions>
                        
                        &lt;StackPanel Grid.Column="0">
                            &lt;TextBlock Text="Current License Status" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            
                            &lt;StackPanel Visibility="{Binding IsActivationSuccessful, Converter={StaticResource BooleanToVisibilityConverter}}">
                                &lt;TextBlock Text="✅ Licensed" FontWeight="SemiBold" Foreground="Green" FontSize="14" Margin="0,0,0,5"/>
                                &lt;TextBlock Text="{Binding CurrentLicense.UserEmail}" FontSize="12" Margin="0,0,0,2"/>
                                &lt;TextBlock Text="{Binding GetLicenseStatusText()}" FontSize="12" Margin="0,0,0,2"/>
                                &lt;TextBlock Text="{Binding GetFeatureSummary()}" FontSize="11" 
                                           Foreground="{DynamicResource MahApps.Brushes.Gray1}" Margin="0,0,0,5"/>
                            &lt;/StackPanel>
                            
                            &lt;StackPanel Visibility="{Binding IsActivationSuccessful, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                                &lt;TextBlock Text="⚠️ Demo Mode" FontWeight="SemiBold" Foreground="Orange" FontSize="14" Margin="0,0,0,5"/>
                                &lt;TextBlock Text="Limited features available. Activate a license to unlock full functionality." 
                                           FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap"/>
                                &lt;TextBlock Text="{Binding GetFeatureSummary()}" FontSize="11" 
                                           Foreground="{DynamicResource MahApps.Brushes.Gray1}" Margin="0,0,0,5"/>
                            &lt;/StackPanel>
                        &lt;/StackPanel>
                        
                        &lt;StackPanel Grid.Column="1" Orientation="Vertical">
                            &lt;Button Content="Activate License" 
                                    Command="{Binding ShowActivationDialogCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                                    Margin="0,0,0,5" Padding="15,8"
                                    Visibility="{Binding IsActivationSuccessful, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            
                            &lt;Button Content="Manage License" 
                                    Command="{Binding ShowActivationDialogCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                                    Margin="0,0,0,5" Padding="15,8"
                                    Visibility="{Binding IsActivationSuccessful, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                            &lt;Button Content="Validate License" 
                                    Command="{Binding ValidateLicenseCommand}"
                                    Margin="0,0,0,5" Padding="15,8"
                                    Visibility="{Binding IsActivationSuccessful, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        &lt;/StackPanel>
                    &lt;/Grid>
                &lt;/Border>

                &lt;!-- Feature Comparison -->
                &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    &lt;StackPanel>
                        &lt;TextBlock Text="📊 Feature Comparison" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                        
                        &lt;Grid>
                            &lt;Grid.ColumnDefinitions>
                                &lt;ColumnDefinition Width="*"/>
                                &lt;ColumnDefinition Width="Auto" MinWidth="80"/>
                                &lt;ColumnDefinition Width="Auto" MinWidth="80"/>
                                &lt;ColumnDefinition Width="Auto" MinWidth="80"/>
                                &lt;ColumnDefinition Width="Auto" MinWidth="80"/>
                            &lt;/Grid.ColumnDefinitions>
                            &lt;Grid.RowDefinitions>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                                &lt;RowDefinition Height="Auto"/>
                            &lt;/Grid.RowDefinitions>
                            
                            &lt;!-- Headers -->
                            &lt;TextBlock Grid.Row="0" Grid.Column="0" Text="Feature" FontWeight="Bold" Margin="0,0,0,10"/>
                            &lt;TextBlock Grid.Row="0" Grid.Column="1" Text="Demo" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
                            &lt;TextBlock Grid.Row="0" Grid.Column="2" Text="Basic" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
                            &lt;TextBlock Grid.Row="0" Grid.Column="3" Text="Professional" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
                            &lt;TextBlock Grid.Row="0" Grid.Column="4" Text="Enterprise" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
                            
                            &lt;!-- Features -->
                            &lt;TextBlock Grid.Row="1" Grid.Column="0" Text="Category Recommender" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="1" Grid.Column="1" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="1" Grid.Column="2" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="1" Grid.Column="3" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="1" Grid.Column="4" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            
                            &lt;TextBlock Grid.Row="2" Grid.Column="0" Text="Keyword Research" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="2" Grid.Column="1" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="2" Grid.Column="2" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="2" Grid.Column="3" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="2" Grid.Column="4" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            
                            &lt;TextBlock Grid.Row="3" Grid.Column="0" Text="Competition Analysis" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="3" Grid.Column="1" Text="❌" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="3" Grid.Column="2" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="3" Grid.Column="3" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="3" Grid.Column="4" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            
                            &lt;TextBlock Grid.Row="4" Grid.Column="0" Text="AMS Generator" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="4" Grid.Column="1" Text="❌" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="4" Grid.Column="2" Text="❌" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="4" Grid.Column="3" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="4" Grid.Column="4" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            
                            &lt;TextBlock Grid.Row="5" Grid.Column="0" Text="Live Data Access" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="5" Grid.Column="1" Text="❌" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="5" Grid.Column="2" Text="❌" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="5" Grid.Column="3" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="5" Grid.Column="4" Text="✅" TextAlignment="Center" Margin="0,5"/>
                            
                            &lt;TextBlock Grid.Row="6" Grid.Column="0" Text="Daily Query Limit" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="6" Grid.Column="1" Text="10" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="6" Grid.Column="2" Text="100" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="6" Grid.Column="3" Text="1,000" TextAlignment="Center" Margin="0,5"/>
                            &lt;TextBlock Grid.Row="6" Grid.Column="4" Text="Unlimited" TextAlignment="Center" Margin="0,5"/>
                            
                            &lt;TextBlock Grid.Row="7" Grid.Column="0" Text="Price" FontWeight="SemiBold" Margin="0,10,0,5"/>
                            &lt;TextBlock Grid.Row="7" Grid.Column="1" Text="Free" TextAlignment="Center" Margin="0,10,0,5"/>
                            &lt;TextBlock Grid.Row="7" Grid.Column="2" Text="$29" TextAlignment="Center" Margin="0,10,0,5"/>
                            &lt;TextBlock Grid.Row="7" Grid.Column="3" Text="$79" TextAlignment="Center" Margin="0,10,0,5"/>
                            &lt;TextBlock Grid.Row="7" Grid.Column="4" Text="$199" TextAlignment="Center" Margin="0,10,0,5"/>
                        &lt;/Grid>
                    &lt;/StackPanel>
                &lt;/Border>

            &lt;/StackPanel>
        &lt;/ScrollViewer>

        &lt;!-- Status Message -->
        &lt;TextBlock Grid.Row="2" Text="{Binding StatusMessage}" 
                   Margin="0,10,0,0" FontStyle="Italic"
                   Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

    &lt;/Grid>

    &lt;!-- License Activation Dialog -->
    &lt;mah:MetroWindow.Flyouts>
        &lt;mah:FlyoutsControl>
            &lt;mah:Flyout Header="License Activation" 
                        IsOpen="{Binding ShowActivationDialog}" 
                        Position="Right" Width="450"
                        Theme="Adapt">
                &lt;ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    &lt;StackPanel>
                        
                        &lt;!-- Current License Info (if exists) -->
                        &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,20"
                                Visibility="{Binding CurrentLicense, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                            &lt;StackPanel>
                                &lt;TextBlock Text="🔐 Current License" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                &lt;TextBlock Text="{Binding CurrentLicense.UserEmail}" FontSize="12" Margin="0,0,0,2"/>
                                &lt;TextBlock Text="{Binding GetLicenseStatusText()}" FontSize="12" Margin="0,0,0,10"/>
                                
                                &lt;Button Content="Deactivate License" 
                                        Command="{Binding DeactivateLicenseCommand}"
                                        Background="Red" Foreground="White"
                                        Padding="10,5" FontSize="11"/>
                            &lt;/StackPanel>
                        &lt;/Border>

                        &lt;!-- Activation Form -->
                        &lt;TextBlock Text="📝 License Activation" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>
                        
                        &lt;TextBlock Text="License Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        &lt;TextBox Text="{Binding LicenseKey}" 
                                 FontFamily="Consolas" FontSize="12"
                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>
                        
                        &lt;TextBlock Text="Email Address:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        &lt;TextBox Text="{Binding UserEmail}" 
                                 FontSize="14" Margin="0,0,0,20"/>

                        &lt;!-- Purchase Link -->
                        &lt;Border Background="{DynamicResource MahApps.Brushes.Accent}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            &lt;StackPanel>
                                &lt;TextBlock Text="💳 Don't have a license yet?" 
                                           FontWeight="SemiBold" Foreground="White" 
                                           Margin="0,0,0,10"/>
                                &lt;TextBlock Text="Purchase a license to unlock all features and support ongoing development." 
                                           Foreground="White" FontSize="12" Margin="0,0,0,10" TextWrapping="Wrap"/>
                                &lt;Button Content="Purchase License" 
                                        Command="{Binding PurchaseLicenseCommand}"
                                        Background="White" 
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        Padding="15,8" FontWeight="SemiBold"/>
                            &lt;/StackPanel>
                        &lt;/Border>

                        &lt;!-- Status -->
                        &lt;TextBlock Text="{Binding StatusMessage}" 
                                   FontStyle="Italic" Margin="0,0,0,15"
                                   Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                        &lt;!-- Action Buttons -->
                        &lt;StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            &lt;Button Content="Cancel" 
                                    Command="{Binding CloseActivationDialogCommand}"
                                    Margin="0,0,10,0" Padding="15,8"/>
                            &lt;Button Content="Activate" 
                                    Command="{Binding ActivateLicenseCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Accent}"
                                    Padding="15,8" FontWeight="SemiBold"
                                    IsEnabled="{Binding IsActivating, Converter={StaticResource BooleanInverseConverter}}"/>
                        &lt;/StackPanel>

                        &lt;!-- Loading Progress -->
                        &lt;mah:MetroProgressBar IsIndeterminate="True" Margin="0,15,0,0"
                                              Visibility="{Binding IsActivating, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    &lt;/StackPanel>
                &lt;/ScrollViewer>
            &lt;/mah:Flyout>
        &lt;/mah:FlyoutsControl>
    &lt;/mah:MetroWindow.Flyouts>
    
&lt;/UserControl>