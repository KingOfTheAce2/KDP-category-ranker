&lt;UserControl x:Class="KDP_CATEGORY_RANKERApp.Views.UpdateNotificationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">

    &lt;Border Background="{DynamicResource MahApps.Brushes.Accent}" 
            CornerRadius="8" Margin="10" Padding="15"
            Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
        &lt;Grid>
            &lt;Grid.ColumnDefinitions>
                &lt;ColumnDefinition Width="Auto"/>
                &lt;ColumnDefinition Width="*"/>
                &lt;ColumnDefinition Width="Auto"/>
            &lt;/Grid.ColumnDefinitions>
            &lt;Grid.RowDefinitions>
                &lt;RowDefinition Height="Auto"/>
                &lt;RowDefinition Height="Auto"/>
                &lt;RowDefinition Height="Auto"/>
            &lt;/Grid.RowDefinitions>

            &lt;!-- Icon -->
            &lt;TextBlock Grid.Column="0" Grid.RowSpan="3" Text="🔄" FontSize="24" 
                       Margin="0,0,15,0" VerticalAlignment="Center"
                       Foreground="White"/>

            &lt;!-- Update Information -->
            &lt;StackPanel Grid.Column="1" Grid.Row="0">
                &lt;TextBlock Text="Update Available!" FontWeight="Bold" FontSize="16" 
                           Foreground="White" Margin="0,0,0,5"/>
                &lt;TextBlock Foreground="White" FontSize="12" Opacity="0.9">
                    &lt;Run Text="Version"/>
                    &lt;Run Text="{Binding AvailableUpdate.Version, Mode=OneWay}" FontWeight="SemiBold"/>
                    &lt;Run Text="is now available"/>
                &lt;/TextBlock>
            &lt;/StackPanel>

            &lt;!-- Critical Badge -->
            &lt;Border Grid.Column="2" Grid.Row="0" 
                    Background="Red" CornerRadius="10" Padding="8,2"
                    Visibility="{Binding AvailableUpdate.IsCritical, Converter={StaticResource BooleanToVisibilityConverter}}">
                &lt;TextBlock Text="CRITICAL" FontSize="10" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
            &lt;/Border>

            &lt;!-- Download Progress (when downloading) -->
            &lt;StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
                        Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                &lt;mah:MetroProgressBar Value="{Binding DownloadProgress}" 
                                      Minimum="0" Maximum="100" 
                                      Height="8" Margin="0,0,0,5"
                                      Foreground="White"/>
                &lt;TextBlock Text="{Binding DownloadStatus}" FontSize="11" 
                           Foreground="White" Opacity="0.8"/>
            &lt;/StackPanel>

            &lt;!-- Action Buttons (when not downloading) -->
            &lt;StackPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0"
                        Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                
                &lt;Button Content="Later" 
                        Command="{Binding RemindLaterCommand}"
                        Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                        Margin="0,0,8,0" Padding="12,4" FontSize="12"
                        Background="Transparent" BorderBrush="White" 
                        Foreground="White"/>
                        
                &lt;Button Content="Install Update" 
                        Command="{Binding InstallUpdateCommand}"
                        Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                        Padding="12,4" FontSize="12" FontWeight="SemiBold"
                        Background="White" BorderBrush="White" 
                        Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
            &lt;/StackPanel>
        &lt;/Grid>
    &lt;/Border>

    &lt;!-- Update Dialog -->
    &lt;mah:MetroWindow.Flyouts>
        &lt;mah:FlyoutsControl>
            &lt;mah:Flyout Header="Software Update Available" 
                        IsOpen="{Binding ShowUpdateDialog}" 
                        Position="Right" Width="400"
                        Theme="Adapt">
                &lt;ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    &lt;StackPanel>
                        
                        &lt;!-- Version Info -->
                        &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            &lt;StackPanel>
                                &lt;TextBlock Text="🚀 New Version Available" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0,0,0,10"/>
                                &lt;Grid>
                                    &lt;Grid.ColumnDefinitions>
                                        &lt;ColumnDefinition Width="Auto"/>
                                        &lt;ColumnDefinition Width="*"/>
                                    &lt;/Grid.ColumnDefinitions>
                                    &lt;Grid.RowDefinitions>
                                        &lt;RowDefinition Height="Auto"/>
                                        &lt;RowDefinition Height="Auto"/>
                                        &lt;RowDefinition Height="Auto"/>
                                    &lt;/Grid.RowDefinitions>
                                    
                                    &lt;TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    &lt;TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AvailableUpdate.Version}" Margin="0,0,0,5"/>
                                    
                                    &lt;TextBlock Grid.Row="1" Grid.Column="0" Text="Release Date:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    &lt;TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AvailableUpdate.ReleaseDate, StringFormat='{}{0:MMMM dd, yyyy}'}" Margin="0,0,0,5"/>
                                    
                                    &lt;TextBlock Grid.Row="2" Grid.Column="0" Text="Size:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                    &lt;TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding AvailableUpdate.FileSize, Converter={StaticResource FileSizeConverter}}"/>
                                &lt;/Grid>
                                
                                &lt;!-- Critical warning -->
                                &lt;Border Background="Red" CornerRadius="4" Padding="10" Margin="0,10,0,0"
                                        Visibility="{Binding AvailableUpdate.IsCritical, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    &lt;TextBlock Text="⚠️ This is a critical security update and is strongly recommended." 
                                               Foreground="White" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                &lt;/Border>
                            &lt;/StackPanel>
                        &lt;/Border>

                        &lt;!-- Release Notes -->
                        &lt;TextBlock Text="📝 What's New" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        &lt;Border Background="{DynamicResource MahApps.Brushes.Gray10}" 
                                CornerRadius="8" Padding="15" Margin="0,0,0,20" MaxHeight="200">
                            &lt;ScrollViewer VerticalScrollBarVisibility="Auto">
                                &lt;TextBlock Text="{Binding AvailableUpdate.ReleaseNotes}" 
                                           TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
                            &lt;/ScrollViewer>
                        &lt;/Border>

                        &lt;!-- Action Buttons -->
                        &lt;StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            &lt;Button Content="Not Now" 
                                    Command="{Binding DismissUpdateCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                                    Margin="0,0,10,0" Padding="15,8"/>
                            &lt;Button Content="Remind Me Later" 
                                    Command="{Binding RemindLaterCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                                    Margin="0,0,10,0" Padding="15,8"/>
                            &lt;Button Content="Install Now" 
                                    Command="{Binding InstallUpdateCommand}"
                                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"
                                    Padding="15,8" FontWeight="SemiBold"/>
                        &lt;/StackPanel>
                    &lt;/StackPanel>
                &lt;/ScrollViewer>
            &lt;/mah:Flyout>
        &lt;/mah:FlyoutsControl>
    &lt;/mah:MetroWindow.Flyouts>
    
&lt;/UserControl>